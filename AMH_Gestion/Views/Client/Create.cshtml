@model AMH_Gestion.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Création</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label">Nom du client</label>
                <input asp-for="ClientName" class="form-control" placeholder="Entrez le nom du client"/>
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressNumber" class="control-label">N°</label>
                <input asp-for="AddressNumber" class="form-control" placeholder="Entrez le n° de la voie"/>
                <span asp-validation-for="AddressNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressStreet" class="control-label">Rue</label>
                <input asp-for="AddressStreet" class="form-control" placeholder="Entrez la rue"/>
                <span asp-validation-for="AddressStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Ville</label>
                <input asp-for="City" class="form-control" placeholder="Entrez la ville"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Code Postal</label>
                <input asp-for="PostalCode" class="form-control" placeholder="Entrez le Code Postal"/>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Pays</label>
                <input asp-for="Country" class="form-control" placeholder="Entrez le pays"/>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Téléphone</label>
                <input asp-for="Phone" class="form-control" placeholder="Entrez un n° de téléphone"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Adresse email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Entrez une adresse email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

